
<h1><%= @topic.title %></h1>
<div class="container">
    <% @topic.bookmarks.each_slice(3) do |bookmarks| %>
      <div class="row">
        <% bookmarks.each do |b|%>
          <div class="col-sm">
            <%= link_to b.url, topic_bookmark_path(@topic, b)%>
          </div>
        <% end %>
      </div>
    <% end %>
</div>

<%= link_to "New URL", new_topic_bookmark_path(@topic,  @bookmark), class: "btn btn-success"%>
<%= link_to "Delete Topic", @topic , method: :delete, class: "btn btn-danger", data:{confirm: 'Are you sure you want to delete this topic?'} %>
