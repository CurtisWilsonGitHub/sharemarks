<!DOCTYPE html>
<html>
  <head>
    <title>Sharemarks</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark ">
        <span class="navbar-brand"> Sharemarks </span>
        <ul class="navbar-nav ml-auto">
          <% if user_signed_in? %>
            <li class="nav-item"><%= link_to 'All Topics', topics_url, class:'nav-link' %></li>
            <li class="nav-item"><%= link_to 'Edit Profile', users_show_url(:id => current_user), class:'nav-link' %></li>
            <li class="nav-item"><%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class:'nav-link' %></li>
          <% else %>
            <li class="nav-item"><%= link_to "Sign Up", new_user_registration_path, class:'nav-link' %></li>
            <li class="nav-item"><%= link_to "Sign In", new_user_session_path, class:'nav-link' %></li>
          <% end %>
        </ul>
      </nav>
      <% if flash[:notice] %>
         <div class="alert alert-success">
           <button type="button" class="close" data-dismiss="alert">&times;</button>
           <%= flash[:notice] %>
         </div>
       <% elsif flash[:alert] %>
         <div class="alert alert-warning">
           <button type="button" class="close" data-dismiss="alert">&times;</button>
           <%= flash[:alert] %>
         </div>
        <% end %>
      <%= yield %>
    </div>
  </body>
</html>
